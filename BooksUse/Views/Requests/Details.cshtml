@model BooksUse.Models.Requests

@{
    ViewData["Title"] = "Detailsnew";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FkBooksNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FkBooksNavigation.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FkUsersNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FkUsersNavigation.FirstName) @Html.DisplayFor(model => model.FkUsersNavigation.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Approved)
        </dt>
        <dd class="col-sm-10">
            @((Model.Approved == 1) ? "Oui" : "Non")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FkYearsNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FkYearsNavigation.Title)
        </dd>
        <dt class="col-sm-2">
            Classe(s)
        </dt>
        <dd class="col-sm-10">
            <br />
            <ul>
            @foreach (SchoolClassesRequests item in Model.SchoolClassesRequests)
            {
               <li>@item.FkSchoolClassesNavigation.Name</li>
            }
            </ul>
</dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
    <a asp-action="Index">Retour</a>
</div>
