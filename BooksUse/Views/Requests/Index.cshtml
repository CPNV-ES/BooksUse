@model IEnumerable<BooksUse.Models.Requests>

@{
    ViewData["Title"] = "Index";
}

<h4>@(ViewData["Name"])</h4>
<br />
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Nouvelle demande</a>
</p>
<table class="table">
    <thead>
        <tr class="text-primary text-center">
            <th>
                Livre
            </th>
            <th>
                Demandeur
            </th>
            <th>
                Approuvé
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FkBooksNavigation.Title)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FkUsersNavigation.FirstName) @Html.DisplayFor(modelItem => item.FkUsersNavigation.LastName)
            </td>
            <td class="text-center">
                @((item.Approved == 1) ? "Oui" : "Non")
            </td>
            <td class="text-center">
                @*<a asp-action="Edit" asp-route-id="@item.Id">Editer</a> |*@
                <a asp-action="Details" asp-route-id="@item.Id"><i class="mdi mdi-alert-circle-outline mdi-rotate-180 text-primary" style="font-size: 20px;"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="mdi mdi-delete text-danger" style="font-size: 20px;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
