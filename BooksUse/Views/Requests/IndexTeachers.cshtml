@model IEnumerable<BooksUse.Models.Requests>

@{
    ViewData["Title"] = "Index";
}

<h1>Mes livres à approuver</h1>

<p>
    <a asp-action="Create">J'ai besoin d'un autre livre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Livre
            </th>
            <th>
                Status
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var style = (item.Approved == 0) ? "alert alert-warning" : "";
                <tr class="@style">
                    <td>
                        @Html.DisplayFor(modelItem => item.FkBooksNavigation.Title)
                    </td>
                    <td>
                        @if (item.Approved == 1)
                        {
                            <span>Déja approuvé</span>;
                        }
                        else
                        {
                            <a asp-action="Approved" asp-route-id="@item.Id">J'en ai besoin</a>
                        }
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
</table>
