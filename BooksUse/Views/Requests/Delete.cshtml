@model BooksUse.Models.Requests

@{
    ViewData["Title"] = "Delete";
}

<h3>Etes-vous sûr de vouloir supprimer cette demande ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Livre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkBooksNavigation.Title)
        </dd class>
        <dt class = "col-sm-2">
            Demandeur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FkUsersNavigation.FirstName) @Html.DisplayFor(model => model.FkUsersNavigation.LastName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
